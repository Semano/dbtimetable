<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@drawable/main_menu"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:layout_gravity="center_horizontal">
  
  	<RelativeLayout 
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:layout_marginTop="180dp" android:filterTouchesWhenObscured="false" android:gravity="center">
  
		<Button
		    android:id="@+id/Ferry"
		    android:layout_width="120dp"
		    android:layout_height="120dp"
		    android:background="@drawable/ferry" />
				
		<TextView 
			android:layout_height="wrap_content" 
			android:id="@+id/TextView01" 
			android:layout_toRightOf="@+id/Ferry" 
			android:layout_width="wrap_content" 
			android:text="Ferries" 
			android:textColor="@android:color/white" 
			android:textSize="24dp" 
			android:textStyle="bold" 
			android:layout_alignBaseline="@+id/Ferry"/>
		
		
		<Button  
			android:layout_width="120dp" 
			android:layout_height="120dp" 
			android:id="@+id/Bus" 
			android:background="@drawable/bus" android:layout_toRightOf="@id/TextView01" android:layout_marginLeft="25dp"/>
	
		<TextView 
			android:layout_height="wrap_content" 
			android:id="@+id/TextView02" 
			android:layout_toRightOf="@+id/Bus" 
			android:layout_below="@+id/Ferry" 
			android:layout_width="wrap_content" 
			android:layout_alignBaseline="@+id/Bus" 
			android:text="Buses" android:textColor="@android:color/white" 
			android:textStyle="bold" 
			android:textSize="24dp" />
			
	</RelativeLayout>

</LinearLayout>
